@model ESCenter.Admin.Application.Contracts.Users.Tutors.TutorUpdateDto

@{
    ViewData["Title"] = "Edit";

    List<string> roles = ViewData["Roles"] as List<string> ?? new List<string>();
    List<string> genders = ViewData["Genders"] as List<string> ?? new List<string>();
    List<string> academics = ViewData["AcademicLevels"] as List<string> ?? new List<string>();
    bool firstItem = true;
    bool firstItem1 = true;
}
<h1>Edit</h1>

<div class="alert alert-success alert-dismissible fade collapse" role="alert" id="successAlert">
    <i class="bi bi-check-circle me-1"></i>
    Update successfully!
    <button type="button" class="btn-close" data-bs-toggle="collapse" id="successAlertButton" data-bs-target="#successAlert" aria-expanded="false" aria-controls="successAlert" aria-label="Close"></button>
</div>

<h4>@Model.FirstName @Model.LastName</h4>

<hr/>
<div class="card">
    <div class="card-body">
        <h5 class="card-title">Personal Information</h5>

        <!-- Multi Columns Form -->
        <form class="row g-3" asp-action="Edit" asp-controller="User" asp-route-id="@Model.Id" method="post" onsubmit="return callPostActionWithForm(this);">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="col-md-6">
                <label asp-for="FirstName" class="form-label">First Name</label>
                <input type="text" asp-for="FirstName" class="form-control"/>
                <span asp-validation-for="FirstName" class="text-danger"></span>

            </div>
            <div class="col-md-6">
                <label asp-for="LastName" class="form-label">Last Name</label>
                <input type="text" class="form-control" asp-for="LastName"/>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <!-- ----------------------------------- -->

            <div class="col-md-4">
                <label asp-for="Gender" class="form-label">Gender</label>
                <select asp-for="Gender" class="form-select">
                    <option selected>@Model.Gender.ToString()</option>

                    @foreach (string i in genders)
                    {
                        @if (i != Model.Gender.ToString())
                        {
                            <option> @i </option>
                        }
                    }
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <label asp-for="Role" class="form-label">Role</label>
                <select asp-for="Role" class="form-select">
                    <option selected>@Model.Role.ToString()</option>

                </select>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <label asp-for="BirthYear" class="form-label">Birth</label>
                <input type="number" class="form-control" asp-for="BirthYear"/>

                <span asp-validation-for="BirthYear" class="text-danger"></span>
            </div>
            <!-- disable email when confirmed -->
            @if (Model.IsEmailConfirmed == true)
            {
                <div class="col-md-6">
                    <label asp-for="Email" class="form-label">Email</label>

                    <div class="input-group mb-3">

                        <input type="email" readonly asp-for="Email" class="form-control" aria-describedby="basic-addon3"/>
                        <span class="input-group-text" id="basic-addon3">
                            <i class="bi bi-check">
                            </i>
                        </span>

                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>

                </div>
            }
            else
            {
                <div class="col-md-6">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input type="email" asp-for="Email" class="form-control"/>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            }

            <div class="col-md-6">
                <label asp-for="PhoneNumber" class="form-label">Number</label>
                <div class="col-sm-12">
                    <input type="tel" asp-for="PhoneNumber" class="form-control"/>
                </div>
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>

            </div>
            @* <div class="col-md-6" hidden> *@
            @*     <label asp-for="Password" class="form-label">Password</label> *@
            @*     <input type="password" asp-for="Password" class="form-control"> *@
            @* </div> *@
            <!-- ----------------------------------- -->
            <div class="col-6">
                <label asp-for="City" class="form-label">City</label>
                <input type="text" class="form-control" asp-for="City" placeholder="Sai Gon"/>
                <span asp-validation-for="City" class="text-danger"></span>
            </div>

            <div class="col-6">
                <label asp-for="Country" class="form-label">Address</label>
                <input type="text" class="form-control" asp-for="Country" placeholder="Viet Nam"/>
                <span asp-validation-for="Country" class="text-danger"></span>
            </div>

            <div class="col-12">
                <div class="form-floating">
                    <textarea class="form-control" placeholder="Address" asp-for="Description" style="height: 100px;"></textarea>
                    <label asp-for="Description" class="form-label">Description</label>
                    <span asp-validation-for="Description" class="text-danger"></span>

                </div>
            </div>
            <input type="hidden" asp-for="Id"/>
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Submit</button>
                <a type="reset" asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>

    </div>
</div>

<div class="card">
    <div class="card-body">
        <form class="row g-3" asp-action="EditTutorInformation" asp-route-id="@Model.Id" asp-controller="Tutor" onsubmit="return callPostActionWithForm(this);">
            <h5 class="card-title">Tutor information</h5>

            <div class="col-md-4">
                <label asp-for="AcademicLevel" class="form-label">Academic Level</label>
                <select asp-for="AcademicLevel" class="form-select">
                    <option selected>@Model.AcademicLevel</option>

                    @foreach (var i in academics.Where(i => i != Model.AcademicLevel))
                    {
                        <option> @i </option>
                    }
                </select>
                <span asp-validation-for="AcademicLevel" class="text-danger"></span>
            </div>
            <div class="col-md-8">
                <label asp-for="University" class="form-label">University</label>
                <input type="text" class="form-control" asp-for="University"/>
                <span asp-validation-for="University" class="text-danger"></span>
            </div>
            <!-- ----------------------------------- -->

            <div class="col-12">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" asp-for="IsVerified"/>
                    <label class="form-check-label" asp-for="IsVerified">
                        Is tutor verified?
                    </label>

                </div>
            </div>

            <input type="hidden" asp-for="Id"/>
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Edit</button>
            </div>
        </form><!-- End Multi Columns Form -->
    </div>
</div>

<div class="card">

    <div class="card-body">
        <h5 class="card-title">Edit Tutor Majors</h5>

        <form class="row g-3" asp-action="EditTutorMajors" asp-route-tutorId="@Model.Id" asp-controller="Tutor" onsubmit="return callPostActionWithForm(this);">

            <!-- List group with Advanced Contents -->
            <div class="list-group" style="grid-template-columns: repeat(4,1fr); display: grid">
                @foreach (var s in Model.Majors)
                {
                    <li class="list-group-item" style="border: none">
                        @if (s.IsSelected)
                        {
                            <input class="form-check-input" type="checkbox" name="majorIds" value="@s.Id" checked="checked"/>
                        }
                        else
                        {
                            <input class="form-check-input" name="majorIds" value="@s.Id" type="checkbox"/>
                        }
                        <label class="form-check-label">@s.Name</label>
                    </li>
                }
            </div><!-- End List group Advanced Content -->

            <div class="text-center">
                <button type="submit" class="btn btn-primary">Submit</button>
                <a type="reset" asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Verification Information</h5>
        <form class="row g-3" asp-action="" asp-controller="Tutor" onsubmit="return callPostActionWithForm(this);" style="display: flex; justify-content: center;">
            <div class="card w-50 h-75 ">
                <div class="card-body">
                    <!-- Slides with indicators -->
                    <div id="carouselExampleIndicators" class="carousel slide pointer-event" data-bs-ride="carousel">

                        <div class="carousel-indicators">
                            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="" aria-label="Slide 1"></button>
                            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2" class="active" aria-current="true"></button>
                            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3" class=""></button>
                        </div>

                        <div class="carousel-inner">
                            @foreach (var s in Model.VerificationDtos)
                            {
                                @if (firstItem)
                                {
                                    <div class="carousel-item active">
                                        <img src="@s.Image" class="d-block w-100" alt="...">
                                    </div>
                                    firstItem = false;
                                }
                                else
                                {
                                    <div class="carousel-item ">
                                        <img src="@s.Image" class="d-block w-100" style="" alt="...">
                                    </div>
                                }
                            }
                        </div>

                        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    </div><!-- End Slides with indicators -->
                </div>
            </div>
        </form><!-- End Multi Columns Form -->
    </div>
</div>
@if (Model.ChangeVerificationRequestDto != null)
{
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Change Verification Information</h5>
            <form class="row g-3" asp-action="ModifyChangeVerificationRequest" asp-route-tutorId="@Model.Id" asp-controller="Tutor" style="display: flex; justify-content: center;">
                <div class="card w-50">
                    <div class="card-body">
                        <!-- Slides with indicators -->
                        <div id="carouselExampleIndicators1" class="carousel slide pointer-event" data-bs-ride="carousel">

                            <div class="carousel-indicators">
                                <button type="button" data-bs-target="#carouselExampleIndicators1" data-bs-slide-to="0" class="" aria-label="Slide 1"></button>
                                <button type="button" data-bs-target="#carouselExampleIndicators1" data-bs-slide-to="1" aria-label="Slide 2" class="active" aria-current="true"></button>
                                <button type="button" data-bs-target="#carouselExampleIndicators1" data-bs-slide-to="2" aria-label="Slide 3" class=""></button>
                            </div>

                            <div class="carousel-inner">
                                @foreach (var s in Model.ChangeVerificationRequestDto.ChangeVerificationRequestDetails)
                                {
                                    @if (firstItem1)
                                    {
                                        <div class="carousel-item active">
                                            <img src="@s" class="d-block w-100" alt="...">
                                        </div>
                                        firstItem1 = false;
                                    }
                                    else
                                    {
                                        <div class="carousel-item ">
                                            <img src="@s" class="d-block w-100" alt="...">
                                        </div>
                                    }
                                }
                            </div>

                            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators1" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Previous</span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators1" data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Next</span>
                            </button>
                        </div><!-- End Slides with indicators -->
                    </div>
                </div>

                <button id="btnAcceptAll" name="isApproved" value="true" type="submit" class="btn btn-primary">Approve</button>
                <button id="btnRejectAll" name="isApproved" value="false" type="submit" class="btn btn-danger">Reject</button>
            </form><!-- End Multi Columns Form -->
        </div>
    </div>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}