@model List<ESCenter.Admin.Application.Contracts.Users.BasicUsers.UserForListDto>
@{
    int i = 0;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="pagetitle">
    <h1>User Management</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item active">All</li>
        </ol>
    </nav>
</div><!-- End Page Title -->

<div class="card">
    <div class="card-body">
        <div class="card-title">
            <a type="button" class="btn btn-success" asp-action="Create" asp-controller="User">Create</a>
        </div>


        <!-- Table with stripped rows -->
        <table id="example" class="table datatable">
            <thead>
                <tr>

                    <th scope="col">#</th>
                    <th scope="col">Full Name</th>
                    <th scope="col">Gender</th>
                    <th scope="col">Birth Year</th>
                    <th scope="col">Phone Number</th>
                    <th data-sortable="false" scope="col" style="width:30%;">Actions</th>

                </tr>
            </thead>
            <tbody>

                @foreach (var user in Model)
                {
                    i++;
                    <tr>
                        <th scope="row">
                            <input hidden name="Id" value="@user.Id" />
                            @i
                        </th>
                        <td>@user.FirstName @user.LastName</td>
                        <td>@user.Gender</td>
                        <td>@user.BirthYear</td>
                        <td>@user.PhoneNumber</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@user.Id">Edit</a> |
                            <a asp-action="Detail" asp-route-id="@user.Id">Details</a> |

                            <a href="#" onclick="OpenGetDialog('@Url.Action("Delete","User",new {id = @user.Id})','Are you sure you want to delete this user?');">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <!-- End Table with stripped rows -->
    </div>
</div>



