@model IEnumerable<ESCenter.Application.Contracts.Courses.Dtos.CourseForListDto>
@{
    int i = 0;
}

<div class="pagetitle">
    <h1>Course Management</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item active">/Course</li>
        </ol>
    </nav>
</div><!-- End Page Title -->

<div class="card">
    <div class="card-body">
        <div class="card-title">
            <a type="button" class="btn btn-success" asp-action="Create" asp-controller="Course">Create</a>
        </div>

        <!-- Table with stripped rows -->
        <table id="example" class="table datatable">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Title</th>
                <th scope="col">Subject</th>
                <th scope="col">Status</th>
                <th data-sortable="false" scope="col">Actions</th>

            </tr>
            </thead>
            <tbody>

            @foreach (var user in Model)
            {
                i++;
                <tr>
                    <th scope="row">
                        <input hidden name="Id" value="@user.Id"/>
                        @i
                    </th>
                    @if(user.Title.Length > 30)
                    {
                        <td>@user.Title[..30] ...</td>
                    }
                    else
                    {
                        <td>@user.Title</td>
                    }
                    <td>@user.SubjectName</td>
                    <td>@user.Status</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@user.Id">Edit</a>|
                        <a asp-action="Detail" asp-route-id="@user.Id">Details</a> |
                        <a href="#" onclick="OpenGetDialog('@Url.Action("Delete", "Course", new { id = @user.Id })','Are you sure you want to delete this class?');">Delete</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
        <!-- End Table with stripped rows -->
    </div>
</div>