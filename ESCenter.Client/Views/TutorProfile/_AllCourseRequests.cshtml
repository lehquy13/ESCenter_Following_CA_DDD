@model IEnumerable<ESCenter.Client.Application.Contracts.Courses.Dtos.CourseRequestDto>
@{
    var i = 0;
    // Layout = "_ScriptLayout";
}
<div class="card">
    <div class="card-body">
        <h5 class="card-title">Current teaching classes</h5>

        <!-- Table with stripped rows -->
        <table id="example" class="table datatable">
            <thead>
            <tr>
                <!-- a avatar column will be added -->
                <th scope="col">#</th>
                <th scope="col">Title</th>
                <th scope="col">Subject</th>
                <th scope="col">Status</th>
                <th data-sortable="false" scope="col" style="width:30%;">Actions</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var requestGettingClassDto in Model)
            {
                i++;
                <tr>
                    <th scope="row">
                        <input hidden name="Id" value="@requestGettingClassDto.Id"/>
                        @i
                    </th>
                    <td>@requestGettingClassDto.Title</td>
                    <td>@requestGettingClassDto.SubjectName</td>
                    <td>@requestGettingClassDto.RequestStatus</td>

                    <td>
                        <button type="button" class="btn btn-primary" onclick="OpenGetDialog('@Url.Action("TeachingClassDetail", "Profile", new { requestId = requestGettingClassDto.Id, classId = requestGettingClassDto.CourseId })','Detail');">
                            Detail
                        </button>
                    </td>
                </tr>
            }
            </tbody>
        </table>
        <!-- End Table with stripped rows -->
    </div>
</div>