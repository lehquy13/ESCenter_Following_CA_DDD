@model IEnumerable<ESCenter.Client.Application.ServiceImpls.TutorProfiles.VerificationDto>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Your verification change requests</h5>

        <h5 class="col-md-12">Tutor information</h5>

        <div class="row mb-3">
            <label class="col-md-4 col-lg-3 col-form-label">Profile Image</label>
            <div class="col-md-8 col-lg-9">
                @foreach (var i in Model)
                {
                    <img src="@i.Image" style="max-width: 120px;" alt="Profile" id="avatar">
                    <input id="image" asp-for="@i.Image" hidden type="text"/>
                }
            </div>
        </div>

        <form asp-action="CreateChangeRequest" asp-controller="TutorProfile" enctype="multipart/form-data" onsubmit="return createChangeRequest(this);">
            <div class="row mb-3">
                <label class="col-md-4 col-lg-3 col-form-label">Profile Image</label>
                <div class="col-md-8 col-lg-9">
                    <div class="pt-2">
                        <partial name="_UploadComponent"/>

                        @* <input type="file" id="file" name="files" multiple="multiple" onchange="LoadImage('@Url.Action("ChooseProfilePictures", "Tutor", null)','file'); return false;"/> *@
                    </div>
                </div>
            </div>
            
            <button class="btn btn-secondary" type="button" onclick="function ResetUploadComponent() {
                let $el = $('#fileElem');
                $el.wrap('<form>').closest(
                    'form').get(0).reset();
                $el.unwrap();
                
                let $gallery = $('#gallery');
                $gallery.empty();
            }
            ResetUploadComponent()">Refresh</button>
            <button class="btn btn-primary" type="submit">Request to change verification</button>
        </form>

    </div>
</div>