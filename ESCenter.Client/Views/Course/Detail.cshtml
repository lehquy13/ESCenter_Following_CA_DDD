@using CED.Domain.Shared.ClassInformationConsts
@model ESCenter.Client.Models.ClassInformationDetailViewModel

@{
}

<!-- ======= Breadcrumbs ======= -->
<div class="breadcrumbs" data-aos="fade-in">
    <div class="container">
        <h2>Course Details</h2>
        <p>Est dolorum ut non facere possimus quibusdam eligendi voluptatem. Quia aut similique quia voluptas sit quaerat debitis. Rerum omnis ipsam aperiam consequatur laboriosam nemo harum praesentium. </p>
    </div>
</div><!-- End Breadcrumbs -->

<!-- ======= Cource Details Section ======= -->
<section id="course-details" class="course-details">
    <div class="container" data-aos="fade-up">

        <div class="row">
            <div class="card mb-3 col-lg-12">
                <h3>@Model.ClassInformationDto.Title</h3>
                <div class="d-flex justify-content-between align-items-center ">

                    <h4 class="col-lg-6">
                        <b>Subject: </b> @Model.ClassInformationDto.Subject.Name
                    </h4>
                    <form asp-controller="Course" asp-action="RequestGettingClass" class="col-lg-3">
                        @if (Context.Session.GetString("role") == UserRole.Learner.ToString())
                        {
                            <button class="btn btn-success" disabled type="submit">Request for this class (<b>Charge</b>: @Model.ClassInformationDto.ChargeFee $)</button>

                        }
                        else
                        {
                            <button class="btn btn-success" type="submit">Request for this class (<b>Charge</b>: @Model.ClassInformationDto.ChargeFee $)</button>

                        }
                        <input value="@Model.ClassInformationDto.Id" hidden="" name="ClassId"/>
                    </form>

                </div>

                <p>
                    @Model.ClassInformationDto.Description
                </p>
                <div class="row">
                    <p>Requirements</p>
                    <div class="course-info d-flex justify-content-between align-items-center">
                        <h5>Status</h5>
                        <p>@Model.ClassInformationDto.Status</p>
                    </div>
                    <div class="course-info d-flex justify-content-between align-items-center">
                        <h5>Gender requirement</h5>
                        <p>@Model.ClassInformationDto.GenderRequirement</p>
                    </div>
                    <div class="course-info d-flex justify-content-between align-items-center">
                        <h5>Academic requirements</h5>
                        <p>@Model.ClassInformationDto.AcademicLevel</p>
                    </div>


                    <div class="course-info d-flex justify-content-between align-items-center">
                        <h5>Learning Mode</h5>
                        <p>@Model.ClassInformationDto.LearningMode</p>
                    </div>
                    <p> Informations </p>

                    <div class="col-lg-4 ">

                        <div class="course-info d-flex justify-content-between align-items-center">
                            <h5>Class' Fee</h5>
                            <p>$@Model.ClassInformationDto.Fee</p>
                        </div>
                        <div class="course-info d-flex justify-content-between align-items-center">
                            <h5>Charge Fee</h5>
                            <p>$@Model.ClassInformationDto.ChargeFee</p>
                        </div>


                    </div>
                    <div class="col-lg-4 ">
                        <div class="course-info d-flex justify-content-between align-items-center">
                            <h5>Number of students</h5>
                            <p>@Model.ClassInformationDto.NumberOfLearner</p>
                        </div>
                        <div class="course-info d-flex justify-content-between align-items-center">
                            <h5>Student's Gender</h5>
                            <p>@Model.ClassInformationDto.LearnerGender</p>
                        </div>
                    </div>
                    <div class="col-lg-4 ">


                        <div class="course-info d-flex justify-content-between align-items-center">
                            <h5>Minute/Session</h5>
                            <p>@Model.ClassInformationDto.MinutePerSession</p>
                        </div>
                        <div class="course-info d-flex justify-content-between align-items-center">
                            <h5>Session/Week</h5>
                            <p>@Model.ClassInformationDto.SessionPerWeek</p>
                        </div>


                    </div>
                </div>
            </div>


        </div>

    </div>

</section><!-- End Cource Details Section -->

<!-- ======= Cource Details Tabs Section ======= -->
<section id="courses" class="courses">
    <div class="container" data-aos="fade-up">
        <h3>Related classes</h3>
        <div class="row">
            <div class="col-lg-12 mt-4 mt-lg-0">
                @foreach (var i in Model.RelatedClasses)
                {
                    <div class="course-item">
                        <div class="course-content">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <h4>@i.SubjectName</h4>
                                <p class="price">$@i.Fee</p>
                            </div>

                            <h3>
                                <a asp-controller="Course" asp-action="Detail" asp-route-id="@i.Id">@i.Title</a>
                            </h3>
                            <p>@i.Description</p>

                        </div>
                    </div>
                }

            </div>
        </div>

    </div>
</section><!-- End Cource Details Tabs Section -->