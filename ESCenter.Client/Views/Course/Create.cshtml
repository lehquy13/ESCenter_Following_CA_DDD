@using ESCenter.Application.Accounts.Queries.GetUserProfile
@using ESCenter.Client.Application.Contracts.Courses.Dtos
@using ESCenter.Domain.Shared
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model ESCenter.Client.Application.Contracts.Courses.Dtos.CourseCreateForLearnerDto

@{
    ViewData["Title"] = "Get started ";

    var subjects = ViewData["Subjects"] as List<SubjectDto> ?? [];
    
    var genders = EnumProvider.Genders;
    var academicLevels = EnumProvider.FullAcademicLevelsOption;
    
    var user = ViewData["LoginUser"] as UserProfileDto ?? new UserProfileDto();
}

<h4>@Model.Title</h4>

<hr/>
<section id="course-details" class="course-details">
    <form asp-action="CreateCourse" asp-controller="Course">
        <div class="container" data-aos="fade-up">
            <div class="row">
                <div class="col-lg-9 row">
                    <h3>Requirement Description</h3>

                    <div class="col-lg-4 mb-4">
                        <h6>Contact</h6>
                        <input class="form-control" asp-for="ContactNumber" type="text" placeholder="ex: 012312****"/>
                        <span asp-validation-for="ContactNumber" class="text-danger"></span>

                    </div>
                    <div class="col-lg-4 mb-4">
                        <h6>Learner Name</h6>
                        <input class="form-control" asp-for="LearnerName" type="text" placeholder="ex: Jonathan Wick"/>
                        <span asp-validation-for="LearnerName" class="text-danger"></span>

                    </div>

                    <div class="col-lg-4 mb-4 ">
                        <h6>Subjects</h6>

                        <select asp-for="SubjectId" class="form-select">

                            @foreach (var i in subjects)
                            {
                                <option value="@i.Id">@i.Name </option>
                            }
                        </select>
                        <span asp-validation-for="SubjectId" class="text-danger"></span>
                    </div>

                    <div class="col-lg-12 mb-4">

                        <h6>Title</h6>
                        <input type="text" asp-for="Title" class="form-control" placeholder="ex: Find English tutor at HCMC..."/>
                        <span asp-validation-for="Title" class="text-danger"></span>

                    </div>


                    <div class="col-lg-3 mb-4">
                        <h6>Total students</h6>
                        <input class="form-control" asp-for="NumberOfLearner" type="number" value="1"/>
                        <span asp-validation-for="NumberOfLearner" class="text-danger"></span>
                    </div>

                    <div class="col-lg-3 mb-4">
                        <h6>Session/Week</h6>
                        <input type="number" asp-for="SessionPerWeek" class="form-control" value="2"/>
                        <span asp-validation-for="SessionPerWeek" class="text-danger"></span>

                    </div>

                    <div class="col-lg-3 mb-4">
                        <h6>Minutes/Session</h6>
                        <input class="form-control" asp-for="MinutePerSession" type="number" value="90"/>
                        <span asp-validation-for="MinutePerSession" class="text-danger"></span>
                    </div>

                    <div class="col-lg-3 col-md-4 mb-4">
                        <h6>Gender</h6>

                        <select name="gender" asp-for="LearnerGender" class="form-select">
                            @foreach (var i in genders)
                            {
                                <option class="form-control" value="@i">@i</option>
                            }
                        </select>
                        <span asp-validation-for="LearnerGender" class="text-danger"></span>

                    </div>

                    <div class="col-lg-12 mb-4">
                        <h6>Address</h6>
                        <input class="form-control" asp-for="Address" type="text" placeholder="ex: Jonathan Smith"/>
                        <span asp-validation-for="Address" class="text-danger"></span>

                    </div>
                    <div class="col-lg-12 mb-4">
                        <h6>Description / Notes</h6>
                        <input class="form-control" asp-for="Description" type="text" placeholder="ex: ..."/>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <h3>Tutor Requirement</h3>

                    <div class="col-lg-4 mb-4">

                        <h6>Fee ($)</h6>
                        <input type="number" asp-for="Fee" class="form-control" placeholder="ex: 300"/>
                        <span asp-validation-for="Fee" class="text-danger"></span>

                    </div>
                    <div class="col-lg-4 col-md-6 mb-4">
                        <h6>Tutor's gender</h6>

                        <select name="genderRequirement" asp-for="GenderRequirement" class="form-select">
                            @foreach (var i in genders)
                            {
                                <option class="form-control" value="@i">@i</option>
                            }
                        </select>
                        <span asp-validation-for="GenderRequirement" class="text-danger"></span>

                    </div>
                    <div class="col-lg-4 col-md-6 mb-4">
                        <h6>Academic Level</h6>

                        <select name="academicLevel" asp-for="AcademicLevelRequirement" class="form-select">
                            @foreach (var i in academicLevels)
                            {
                                <option class="form-control" value="@i">@i</option>
                            }
                        </select>
                        <span asp-validation-for="AcademicLevelRequirement" class="text-danger"></span>

                    </div>
                    <button class="btn btn-success" type="submit">Create</button>

                </div>
                <div class="col-lg-3">

                    <div class="sidebar mt-sm-30">
                        <div class="widget">
                            <div class="right-class-new-top-content">
                                <h4>Why us?</h4>
                                <p><i class="bi bi-check2-circle"></i> High quality tutor, Strictly censored </p>
                                <p><i class="bi bi-check2-circle"></i> Easy creating your class </p>
                                <p><i class="bi bi-check2-circle"></i> Easy finding your suitable tutor</p>
                                <p><i class="bi bi-check2-circle"></i> Friendly support and consulting</p>
                            </div>
                        </div>
                    </div>

                </div>


            </div>
        </div>
    </form>
</section><!-- End Cource Details Section -->


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}