@using Microsoft.AspNetCore.Mvc.TagHelpers
@model ESCenter.Client.Models.ProfileViewModel

<section class="profile" style="">
    <div class="row">
        <div class="col-xl-4">
            <div class="card">
                <div class="card-body profile-card pt-4 d-flex flex-column align-items-center">

                    @* <img src="/avatar/@Model.UserDto.Image" style="max-width: 360px;" alt="Profile" class="rounded-circle"> *@
                    <img src="@Model.UserProfileDto.Avatar" style="max-width: 360px;" alt="Profile" class="rounded-circle">
                    <h2>@Model.UserProfileDto.FirstName @Model.UserProfileDto.LastName</h2>
                    <h3>@Model.UserProfileDto.Role</h3>
                    <div class="social-links mt-2">
                        <a href="#" class="twitter">
                            <i class="bi bi-twitter"></i>
                        </a>
                        <a href="#" class="facebook">
                            <i class="bi bi-facebook"></i>
                        </a>
                        <a href="#" class="instagram">
                            <i class="bi bi-instagram"></i>
                        </a>
                        <a href="#" class="linkedin">
                            <i class="bi bi-linkedin"></i>
                        </a>
                    </div>
                </div>
            </div>

        </div>

        <div class="col-xl-8">

            <div class="card">
                <div class="card-body pt-3">
                    <!-- Bordered Tabs -->
                    <ul class="nav nav-tabs nav-tabs-bordered">

                        <li class="nav-item">
                            <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#profile-overview">Overview</button>
                        </li>
                        <li class="nav-item">
                            <button class="nav-link" data-bs-toggle="tab" id="profile-edit-button" data-bs-target="#profile-edit">Edit Profile</button>
                        </li>
                        <li class="nav-item">
                            <button class="nav-link" data-bs-toggle="tab" data-bs-target="#learning-class">Learning Class</button>
                        </li>
                        <li class="nav-item">
                            <button class="nav-link" data-bs-toggle="tab" data-bs-target="#notifications">Notifications</button>
                        </li>
                        <li class="nav-item">
                            <button class="nav-link" data-bs-toggle="tab" data-bs-target="#profile-change-password" id="profile-change-password-button">Change Password</button>
                        </li>
                    </ul>
                    <div class="tab-content pt-2">

                        <div class="tab-pane fade show active profile-overview" id="profile-overview">
                            <partial name="_ProfileOverview" model="@Model.UserProfileDto"/>
                        </div>

                        <div class="tab-pane fade profile-edit pt-3" id="profile-edit">

                            <!-- Profile Edit Form -->

                            <partial name="_profileEdit" model="@Model.UserProfileDto" view-data="ViewData"/>
                            <!-- End Profile Edit Form -->

                        </div>

                        <div class="tab-pane fade pt-3" id="learning-class">
                            <!-- Learning Classes -->
                            <partial name="_AllLearningClass" model="@Model.LearningCourseForListDtos"/>
                            <!-- End Learning Classes -->
                        </div>
                        
                        <div class="tab-pane fade pt-3" id="notifications">
                            <!-- Learning Classes -->
                            <partial name="_AllNotifications" model="@Model.NotificationDtos"/>
                            <!-- End Learning Classes -->
                        </div>

                        <div class="tab-pane fade pt-3" id="profile-change-password">
                            <!-- Change Password Form -->
                            <partial name="_changePassword" model="@Model.ChangePasswordRequest"/>
                            <!-- End Change Password Form -->

                        </div>

                    </div><!-- End Bordered Tabs -->

                </div>
            </div>

        </div>
    </div>
</section>